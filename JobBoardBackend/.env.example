# Django settings
# Replace values before using in production
DJANGO_SECRET_KEY=replace_this_with_a_secret_key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Postgres)
# This project expects PostgreSQL. Ensure your DB server is Postgres 14+.
# If using the included docker-compose.yml the container maps host port
# ${DB_PORT} -> container 5432 (default below uses 5433 to match this repo).
DB_NAME=jobboard
DB_USER=jobboarduser
DB_PASSWORD=jobboardpass23
DB_HOST=localhost
DB_PORT=5433

# Optional: custom user model (uncomment if implemented)
# AUTH_USER_MODEL=accounts.User

# Optional services (Celery, Redis, RabbitMQ)
RABBITMQ_HOST=localhost
REDIS_URL=redis://localhost:6379/0

# Notes:
# - Do NOT commit a real secret key or production credentials to version control.
# - To use Docker (recommended for local dev), run `docker compose up -d` then
#   copy this file to `.env` and run migrations.